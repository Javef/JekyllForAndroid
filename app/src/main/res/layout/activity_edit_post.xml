<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:clipToPadding="false"
                android:fitsSystemWindows="true"
                tools:context="gr.tsagi.jekyllforandroid.app.activities.EditPostActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@color/primary"
        android:orientation="vertical"
        android:theme="@style/AppTheme.Dark">

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginStart="@dimen/keyline_1"
            android:layout_marginBottom="40dp"
            android:hint="@string/hint_title"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/keyline_1"
            android:layout_marginEnd="@dimen/keyline_2"
            android:layout_marginStart="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_2"
            android:layout_marginLeft="@dimen/keyline_1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:textSize="15sp"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:hint="@string/hint_category"/>

            <EditText
                android:id="@+id/edit_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:textSize="15sp"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:hint="@string/hint_tags"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/head"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_content"
            android:layout_marginStart="@dimen/keyline_1"
            android:layout_marginEnd="@dimen/double_keyline_1"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/double_keyline_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"/>
    </ScrollView>


    <ImageButton
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/keyline_1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/keyline_1"
        android:layout_alignBottom="@id/head"
        android:layout_marginBottom="@dimen/floating_action_button_margin_minus"
        android:background="@drawable/ripple"
        android:src="@drawable/ic_action_send"
        android:tint="@android:color/white"/>

</RelativeLayout>