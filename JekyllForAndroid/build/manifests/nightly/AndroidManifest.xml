<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="33" android:versionName="1.1-nightly" package="gr.tsagi.jekyllforandroid.nightly">

    <uses-sdk android:minSdkVersion="12" android:targetSdkVersion="18"/>

