        </activity>
        <activity android:label="@string/title_activity_action" android:name="gr.tsagi.jekyllforandroid.ActionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_posts_list" android:name="gr.tsagi.jekyllforandroid.PostsListActivity">
        </activity>
        <activity android:name="gr.tsagi.jekyllforandroid.SetPreferenceActivity"/>
        <activity android:name="gr.tsagi.jekyllforandroid.SettingsActivity"/>
    </application>

</manifest>
