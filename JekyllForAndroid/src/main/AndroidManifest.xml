<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="gr.tsagi.jekyllforandroid" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        tools:node="replace" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:hardwareAccelerated="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".activities.EditPostActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/action_newpost" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gr.tsagi.jekyllforandroid.activities.PostsListActivity" />
        </activity>
        <activity
            android:name=".activities.PreviewMarkdownActivity"
            android:label="@string/title_activity_markdown">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gr.tsagi.jekyllforandroid.activities.EditPostActivity" />
        </activity>
        <activity
            android:name=".activities.PostsListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SetPreferenceActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gr.tsagi.jekyllforandroid.activities.PostsListActivity" />
        </activity>

        <provider
            android:authorities="@string/content_authority"
            android:name=".data.PostsProvider"
            android:exported="false"
            android:syncable="true" />
    </application>

</manifest>