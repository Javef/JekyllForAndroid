<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar.Solid.JekyllforAndroid</item>
        <item name="listPopupWindowStyle">@style/Widget.AppCompat.Light.ListPopupWindow.JekyllforAndroid</item>
    </style>

    <style name="ActionBar.Solid.JekyllforAndroid" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionbar_bg</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <style name="Widget.AppCompat.Light.ListPopupWindow.JekyllforAndroid"
           parent="@style/Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/popup_bg</item>
    </style>
    <!-- Style for forecast listview -->
    <style name="PostsListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
