<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.JekyllforAndroid</item>
        <item name="android:listPopupWindowStyle">@style/Widget.AppCompat.Light.ListPopupWindow.JekyllforAndroid</item>
    </style>
    <!-- ActionBar styles -->
    <style name="ActionBar.Solid.JekyllforAndroid"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_bg</item>
    </style>

    <style name="Widget.AppCompat.Light.ListPopupWindow.JekyllforAndroid"
           parent="@style/Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/popup_bg</item>
    </style>

</resources>